<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vincent.hhxz.activity.GoodsShareActivity">

    <LinearLayout
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:onClick="click"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/abc_ic_ab_back_holo_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:text="爱淘宝"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/name_goodsshare"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="match_parent" />
        <ImageView
            android:onClick="click"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/abc_ic_clear_search_api_disabled_holo_light"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView_goodsshare"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</LinearLayout>
